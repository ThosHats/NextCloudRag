# Domain for routing (must match proxy env)
RAG_DOMAIN=rag.example.com

# Nextcloud Connection (for WebDAV)
NEXTCLOUD_URL=https://cloud.example.com
WEBDAV_USER=readonly-bot
WEBDAV_PASSWORD=your-app-password
NEXTCLOUD_WEBHOOK_SECRET=change_me_to_a_safe_secret

# Databases
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=rag_metadata

QDRANT_API_KEY= # Optional, if Qdrant requires authentication

# Authentication (OIDC)
OIDC_ISSUER=https://auth.example.com/realms/master
OIDC_CLIENT_ID=rag-client
OIDC_AUDIENCE=rag-api

# LLM Provider
# Leave empty if using local Ollama
OPENAI_API_KEY=sk-...
